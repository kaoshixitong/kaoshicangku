<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yitihua3.exam.mapper.exam.PaperMapper">

    <resultMap type="com.yitihua3.exam.entity.exam.Paper" id="PaperMap">
        <result property="paperId" column="paperId" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="total" column="total" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PaperMap">
        select
          paperId, name, total
        from db_examsystem.paper
        where paperId = #{paperId}
    </select>



    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="PaperMap">
        select
          paperId, name, total
        from db_examsystem.paper
        <where>
            <if test="paperId != null">
                and paperId = #{paperId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="total != null">
                and total = #{total}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="paperId" useGeneratedKeys="true">
        insert into db_examsystem.paper(name, total)
        values (#{name}, #{total})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_examsystem.paper
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="total != null">
                total = #{total},
            </if>
        </set>
        where paperId = #{paperId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_examsystem.paper where paperId = #{paperId}
    </delete>

</mapper>